<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
        <td colspan="6"><%= render 'common/search_tag', search_path: contacts_path, placeholder: 'Search User' %></td>
      </tr>
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @contacts.each do |contact| %>
      <tr>
        <td><%= image_tag contact.avatar_url(:thumb) if contact.avatar? %></td>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
